# Environment Configuration Example
# Copy this file to .env.development and .env.production and update with actual values

# =============================================================================
# DEVELOPMENT ENVIRONMENT
# =============================================================================

# API Configuration (Development)
DEV_API_BASE_URL=https://api-dev.ouropay.com
DEV_API_VERSION=v1
DEV_API_TIMEOUT=30000

# App Configuration (Development)
DEV_APP_NAME=Ouro Pay Dev
DEV_BUNDLE_ID=com.ouropay.consumer.dev

# Feature Flags (Development)
DEV_ENABLE_LOGGING=true
DEV_ENABLE_CRASH_REPORTING=false
DEV_ENABLE_ANALYTICS=false
DEV_ENABLE_DEBUG_MENU=true

# Performance Settings (Development)
DEV_MAX_RETRIES=3
DEV_CONNECTION_TIMEOUT=30
DEV_READ_TIMEOUT=60

# Third Party Services (Development - Replace with actual values)
DEV_SENTRY_DSN=your_development_sentry_dsn_here
DEV_FIREBASE_CONFIG=development
DEV_AMPLITUDE_API_KEY=your_development_amplitude_key_here

# Security (Development)
DEV_ENABLE_SSL_PINNING=false
DEV_ENABLE_CERTIFICATE_TRANSPARENCY=false

# =============================================================================
# PRODUCTION ENVIRONMENT  
# =============================================================================

# API Configuration (Production)
PROD_API_BASE_URL=https://api.ouropay.com
PROD_API_VERSION=v1
PROD_API_TIMEOUT=15000

# App Configuration (Production)
PROD_APP_NAME=Ouro Pay
PROD_BUNDLE_ID=com.ouropay.consumer

# Feature Flags (Production)
PROD_ENABLE_LOGGING=false
PROD_ENABLE_CRASH_REPORTING=true
PROD_ENABLE_ANALYTICS=true
PROD_ENABLE_DEBUG_MENU=false

# Performance Settings (Production)
PROD_MAX_RETRIES=2
PROD_CONNECTION_TIMEOUT=15
PROD_READ_TIMEOUT=30

# Third Party Services (Production - Replace with actual values)
PROD_SENTRY_DSN=your_production_sentry_dsn_here
PROD_FIREBASE_CONFIG=production
PROD_AMPLITUDE_API_KEY=your_production_amplitude_key_here

# Security (Production)
PROD_ENABLE_SSL_PINNING=true
PROD_ENABLE_CERTIFICATE_TRANSPARENCY=true

# =============================================================================
# LOCAL DEVELOPMENT SETTINGS
# =============================================================================

# Developer Settings
DEVELOPER_NAME=Your Name Here
DEVELOPER_EMAIL=your.email@example.com

# Local Testing
ENABLE_MOCK_DATA=true
MOCK_API_DELAY=1000

# Debugging
VERBOSE_LOGGING=true
LOG_LEVEL=debug